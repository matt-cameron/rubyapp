	<div class="container">
			<div class="row">
					<div class="col-md-4 col-md-offset-4">
							<div class="login-panel panel panel-default">
									<div class="panel-heading">
											<%= image_tag("logo.png", size: "50%", alt: "DriveABLE") %>
											<h3 class="panel-title">Please Sign In</h3>
									</div>
									<div class="panel-body">
											<%= form_tag '/login' do %>
											<span class="input-group-addon rounded-left"><i class="fa fa-user" aria-hidden="true"></i></span>
											<%= text_field_tag :email, "", placeholder: 'Email Address', class: 'form-control rounded-right' %>
											<span class="input-group-addon rounded-left"><i class="fa fa-lock" aria-hidden="true"></i></span>
											<%= password_field_tag :password, "", placeholder: 'Password', class: 'form-control rounded-right' %>
											<br>
											<%= submit_tag "Sign In", class: 'btn-u btn-u-blue btn-block rounded' %>
											<% end %>
											</form>
									</div>
							</div>
					</div>
			</div>
	</div>

	<!--=== Sticky Footer ===-->
	<div class="container sticky-footer">
		<p class="copyright-space">
			2016 &copy; All Rights Reserved.
		</p>
	</div>
	<!--=== End Sticky Footer ===-->

	<script>
		jQuery(document).ready(function() {
			App.init();
		});
	</script>
