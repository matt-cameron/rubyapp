<!-- app/views/sessions/new.html.erb -->
<% content_for :body_class, "body.login" %>
	<div class="container">
			<div class="row">
					<div class="col-md-4 col-md-offset-4">
							<div class="login-panel panel panel-default animated bounceOutLeft">
									<div class="panel-heading text-center">
											<%= image_tag("logo.png", size: "50%", alt: "DriveABLE") %>
											<br>
											<h3 class="panel-title">Please Sign In</h3>
									</div>
									<div class="panel-body">

														<%= form_tag '/login' do %>
                            <fieldset>
                                <div class="form-group">
                                    <%= text_field_tag :email, "", placeholder: 'Email Address', class: 'form-control', :autofocus => true %>
                                </div>
                                <div class="form-group">
                                    <%= password_field_tag :password, "", placeholder: 'Password', class: 'form-control' %>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <%= submit_tag "Sign In", class: 'btn btn-lg btn-success btn-block' %>
                            </fieldset>
														<% end %>
										</div>
										<div class="panel-footer">&copy; 2017 Driveable Assessment Centres Inc.</div>
									</div>
							</div>
					</div>
			</div>
